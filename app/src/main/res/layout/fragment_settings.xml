<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.settings.SettingsFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_pref"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_settings"
        app:layout_constraintVertical_weight="1"
        android:layout_width="wrap_content"
        android:src="@mipmap/logo_kg"
        android:layout_height="0dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container_pref"
        android:layout_width="match_parent"
        android:name="com.calcprojects.constructorbuddy.ui.settings.Preferences"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintVertical_weight="2.2"
        app:layout_constraintTop_toBottomOf="@id/iv_settings"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>