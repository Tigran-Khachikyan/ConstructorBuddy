<resources>

    <!-- Base application theme. -->
    <style name="NoActionTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="actionModeBackground">@android:color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="button_big" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="elevation">24dp</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button_options" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    style="?attr/materialButtonOutlinedStyle"


    <style name="inputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="helperTextTextColor">@color/colorPrimaryDark</item>
        <item name="errorTextColor">@color/errorColor</item>
        <item name="errorIconTint">@color/errorColor</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="endIconDrawable">@drawable/ic_cancel</item>
        <item name="endIconTint">@android:color/black</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="shapeAppearanceOverlay">@style/cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="unit_Texts">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="layout_constraintVertical_bias">0.4</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="inputText">
        <item name="android:textSize">19sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
    </style>

    <style name="textView_result">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="textView_initial_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="cardCut">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

</resources>
